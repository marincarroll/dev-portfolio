---
import PDFIcon from "../icons/pdf.astro";

---
<footer class="footer">
    <div class="save-pdf">
        <button onclick="window.print()" class="save-pdf__button">
        <span class="save-pdf__icon">
            <PDFIcon/>
        </span>
            PDF
        </button>
    </div>
</footer>
<style>
    .footer {
        position: sticky;
        bottom: var(--border-width);
        display: flex;
        justify-content: flex-end;
        z-index: 1;
    }

    .save-pdf {
        position: absolute;
        bottom: 0;
        background: var(--color--dark);
        border-top-left-radius: var(--border-radius);
        padding-block-start: calc( var(--border-radius) * 0.35);
        padding-inline-start: calc( var(--border-radius) * 0.35);
        -webkit-user-select: none;
        user-select: none;
    }

    .save-pdf::before,
    .save-pdf::after {
        content: "";
        position: absolute;
        background: transparent;
        height: calc(2 * var(--border-radius));
        width: var(--border-radius);
        border-bottom-right-radius: var(--border-radius);
        box-shadow: 0 calc(1 * var(--border-radius)) 0 0 var(--color--dark);
        z-index: -1;
    }

    .save-pdf::before {
        top: calc(-2 * var(--border-radius));
        right: 0;
    }

    .save-pdf::after {
        bottom: 0;
        left: calc(-1 * var(--border-radius));
    }

    .save-pdf__button {
        cursor: pointer;
        background: none;
        border: none;
        color: var(--color--light);
        padding-inline: 0.3em;
        padding-block: calc(0.14 * var(--border-radius));
        line-height: 1;
        border-radius: calc(var(--border-radius) * 0.475);
        display: flex;
        font-size: 1.3em;
        font-weight: 500;
        align-items: center;
        font-family: var(--font-family--body);
        gap: 0.3em;
        letter-spacing: 0.05em;
    }

    .save-pdf__button:hover {
        background-color: var(--color--light);
        color: var(--color--dark);
    }

    .save-pdf__icon {
        width: 1.3em;
        margin-top: 0.16em;
    }

    @media (prefers-reduced-motion: no-preference) {

        .save-pdf__button:hover .save-pdf__icon {
            animation: bounce 0.4s ease infinite alternate;
        }
    }

    @keyframes bounce {
        to {
            transform: translateY(-0.14em);
        }
    }
</style>