---
import PDFIcon from "../icons/pdf.astro";

---
<div class="save-pdf decorative-curve">
    <button onclick="console.log('test')" class="save-pdf__button">
        <span class="save-pdf__icon">
            <PDFIcon/>
        </span>
        PDF
    </button>
</div>
<style>
    .save-pdf {
        position: sticky;
        bottom: 0;
        left: 100%;
        display: inline-block;
        background: var(--color--dark);
        border-top-left-radius: var(--border-radius);
        padding: 0.8em 0.35em 0.35em 0.8em;
        -webkit-user-select: none;
        user-select: none;
    }

    .save-pdf::before,
    .save-pdf::after {
        transform: rotate(-180deg);
        transform-origin: top;
    }

    .save-pdf::before {
        bottom: calc(-2 * var(--border-radius));
        left: calc(-1 * var(--border-radius));
    }

    .save-pdf::after {
       top: 0;
        right: 0;
    }

    .save-pdf__button {
        cursor: pointer;
        background: none;
        border: none;
        color: var(--color--light);
        padding: 0.1em 0.3em;
        line-height: 1;
        border-radius: calc(var(--border-radius) * 0.5);
        display: flex;
        font-size: 1.5rem;
        align-items: center;
        font-family: var(--font-family--body);
        gap: 0.3em;
        letter-spacing: 0.05em;
    }

    .save-pdf__icon {
        width: 1.5em;
        margin-top: 0.1em;
    }
</style>